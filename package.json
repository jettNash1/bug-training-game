  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.12.0",
    "mongoose": "^8.8.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.9",
    "jest": "^29.0.0",
    "supertest": "^6.0.0"
  }
}

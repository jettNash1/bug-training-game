# Environment
NODE_ENV=production
PORT=3000

# MongoDB Configuration
# For MongoDB Atlas (if continuing to use it)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
# For Amazon DocumentDB (if migrating)
# MONGODB_URI=mongodb://username:password@your-docdb-cluster.cluster-xxxxxxxxxxxx.region.docdb.amazonaws.com:27017/database?replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_S3_BUCKET=bug-training-game-frontend
AWS_CLOUDFRONT_DISTRIBUTION_ID=your_distribution_id
AWS_EC2_PUBLIC_DNS=your-ec2-public-dns.amazonaws.com

# CORS Configuration
ALLOWED_ORIGINS=https://your-cloudfront-distribution.cloudfront.net,https://your-s3-bucket.s3-website-us-east-1.amazonaws.com
AWS_FRONTEND_URL=https://your-cloudfront-distribution.cloudfront.net 